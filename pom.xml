<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>me.tehbeard</groupId>
	<artifactId>BeardStat</artifactId>
	<version>0.4</version>
	<packaging>jar</packaging>
	<name>BeardStat</name>

	<properties>
		<project.plugin.flavour>honey</project.plugin.flavour>
		<project.plugin.minor>7</project.plugin.minor>
		<project.plugin.version>${project.version}.${project.plugin.minor}-${project.plugin.flavour}</project.plugin.version>
		<project.config.version>1</project.config.version>
	</properties>

	<repositories>
		<!-- Repository for Bukkit -->
		<repository>
			<id>bukkit-repo</id>
			<url>http://repo.bukkit.org/content/groups/public/</url>
		</repository>
	</repositories>



	<dependencies>
		<dependency>
			<groupId>org.bukkit</groupId>
			<artifactId>bukkit</artifactId>
			<version>1.2.5-R1.3</version>
		</dependency>
		<dependency>
			<groupId>me.tehbeard</groupId>
			<artifactId>Vocalise</artifactId>
			<version>1.0</version>
		</dependency>
	</dependencies>

	<build>
	    <sourceDirectory>target/src</sourceDirectory>
		<resources>
			<resource>
				<targetPath>.</targetPath>
				<filtering>true</filtering>
				<directory>${basedir}/src/main/resources/</directory>
				<includes>
					<include>plugin.yml</include>
					<include>config.yml</include>
					<include>interactive.yml</include>
				</includes>
			</resource>

			<resource>
				<filtering>true</filtering>
				<targetPath>../src</targetPath>
				<directory>${basedir}/src/main/java/</directory>
				<includes><include>me/tehbeard/BeardStat/BeardStat.java</include></includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>1.5</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<artifactSet>
								<includes>
									<include>me.tehbeard:Vocalise</include>
								</includes>
							</artifactSet>
							<relocations>
								<relocation>
									<pattern>me.tehbeard.vocalise</pattern>
									<shadedPattern>me.tehbeard.BeardStat.vocalise</shadedPattern>
								</relocation>
							</relocations>
							<minimizeJar>true</minimizeJar>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>

	</build>
</project>
